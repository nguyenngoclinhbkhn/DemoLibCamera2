<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlackLibrary</item>
        <item name="colorPrimaryDark">@color/colorBlackLibrary</item>
        <item name="colorAccent">@color/colorBlackLibrary</item>
    </style>


    <style name="Capture" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Capture photo . . .</item>
        <item name="DialogSpotColor">@color/colorYellowLibrary</item>
        <item name="DialogSpotCount">8</item>
    </style>
    <style name="Wait" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">. . . Waiting . . .</item>
        <item name="DialogSpotColor">@color/colorYellowLibrary</item>
        <item name="DialogSpotCount">8</item>
    </style>
    <style name="SeekBarColor"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorYellowLibrary</item>
    </style>
</resources>